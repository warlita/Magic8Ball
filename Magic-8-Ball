let userName = 'Analita';

userName ? console.log(`Hello, ${userName}!`) : console.log('Hello!');

const userQuestion = "Am I human?";

console.log(`${userName} has asked ${userQuestion}`);

randomNumber = Math.floor(Math.random() * 8);

console.log(randomNumber);

eightBall = '';

switch (randomNumber) {
case 0:
eightBall = 'It is certain';
break;

case 1:
  eightBall = 'It is decidedly so';
break;

case 2:
  eightBall = 'BRB';
break;

case 3:
  eightBall = 'i\'m tired, try again later';
break;

case 4:
  eightBall = 'Yes';
break;

case 5:
  eightBall = 'no';
break;

case 6:
  eightBall = 'Outlook not so good';
break;

case 7:
  eightBall = 'Signs point to yes';
break;

case 8:
  eightBall = 'maybe';
break;

default:
  eightBall = 'try again';
}

console.log(eightBall);